<?xml version="1.0"?>
<launch>
  <!-- By default we load the robot's URDF with the given hardware interface -->
  <arg name="load_robot_description" default="true"/>
  <arg name="hardware_interface" default="EffortJointInterface"/>

  <!-- The name of the parameter under which the URDF is loaded -->
  <arg name="robot_description" default="robot_description"/>

   <!-- Load the URDF with the given hardware interface into the ROS Parameter Server -->
  <param if="$(arg load_robot_description)" name="$(arg robot_description)"
	 command="$(find xacro)/xacro.py '$(find iiwa_description)/urdf/iiwa.urdf.xacro' prefix:=$(arg hardware_interface)" />
  
  <!-- The semantic description that corresponds to the URDF -->
  <param name="$(arg robot_description)_semantic" textfile="$(find iiwa_moveit)/config/iiwa.srdf" />
  
  <!-- Load updated joint limits (override information from URDF) -->
  <group ns="$(arg robot_description)_planning">
    <rosparam command="load" file="$(find iiwa_moveit)/config/joint_limits.yaml"/>
  </group>

  <!-- Load default settings for kinematics; these settings are overridden by settings in a node's namespace -->
  <group ns="$(arg robot_description)_kinematics">
    <rosparam command="load" file="$(find iiwa_moveit)/config/kinematics.yaml"/>
  </group>
  
</launch>