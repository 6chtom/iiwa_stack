<?xml version="1.0"?>
<launch>
  <!-- The planning and execution components of MoveIt! configured to run -->
  <!-- using the ROS-Industrial interface. -->

  <!-- Non-standard joint names:
      - Create a file [robot_moveit_config]/config/joint_names.yaml
	  controller_joint_names: [joint_1, joint_2, ... joint_N] 
      - Update with joint names for your robot (in order expected by rbt controller)
      - and uncomment the following line: -->
  <!-- <rosparam command="load" file="$(find [robot_moveit_config])/config/joint_names.yaml"/> -->

  <!-- the "sim" argument controls whether we connect to a Simulated or Real robot -->
  <!--  - if sim=false, a robot_ip argument is required -->
  <arg name="sim" default="true" doc="If true, the robot will be simulated in Gazebo" />
  <arg name="robot_ip" default="192.168.0.20" unless="$(arg sim)" doc="The IP address of the robot" />
  <arg name="robot_port" default="49939" unless="$(arg sim)" doc="The listening port of the FRI interface" />
<!--  <arg name="mode" default="EffortJointInterface"/>-->
<!--   <arg name="mode" default="PositionJointInterface"/> -->
   <arg name="hardware_interface" default="VelocityJointInterface"/> 
  
  <!-- load the robot_description parameter before launching ROS-I nodes -->
  <include file="$(find lbr_iiwa_moveit)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
    <arg name="hardware_interface" value="$(arg hardware_interface)"/>
  </include>


	<!-- run the robot simulator -->
	<group if="$(arg sim)">
<!-- 		<include file="$(find lbr_iiwa_launch)/launch/lbr_iiwa_gazebo_effort_pos_traj_control.launch"/> -->
<!-- 		<include file="$(find lbr_iiwa_launch)/launch/lbr_iiwa_gazebo_forward_pos_traj_control.launch"/> -->
		<include file="$(find lbr_iiwa_launch)/launch/lbr_iiwa_gazebo_forward_vel_traj_control.launch"/>
	</group>
	
	<!-- work on the real robot - WORKING ON  -->
	<group unless="$(arg sim)">
	   <!-- Load joint controller configurations from YAML file to parameter server -->
	   <rosparam file="$(find lbr_iiwa_control)/config/lbr_iiwa_control.yaml" command="load" ns="lbr_iiwa"/>
	   
	   <!-- load the controllers -->
	   <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	   output="screen" ns="/lbr_iiwa" args="joint_state_controller effort_pos_joint_trajectory_controller" />
	   
	   <!-- robot interface -->
	   
	   <include file="$(find lbr_iiwa_hw)/launch/lwr_hw.launch" >
	   </include>
	  
	</group>

  <include file="$(find lbr_iiwa_moveit)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
    <arg name="hardware_interface" value="$(arg hardware_interface)"/>
  </include>

  <include file="$(find lbr_iiwa_moveit)/launch/moveit_rviz.launch">
    <arg name="config" value="true"/>
  </include>
  
  <include file="$(find lbr_iiwa_moveit)/launch/default_warehouse_db.launch" />

</launch>